{
  "name": "quick-image-translator",
  "version": "0.1.0",
  "description": "A macOS menu bar app for quick screenshot translation using Google Translate",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build:watch & wait-on dist/main/index.js && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:renderer -- --watch\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,html}\"",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "build:prod": "npm run clean && NODE_ENV=production npm run build",
    "package": "npm run build:prod && electron-builder",
    "package:mac": "npm run build:prod && electron-builder --mac"
  },
  "keywords": [
    "translator",
    "screenshot",
    "OCR",
    "menubar",
    "google-translate",
    "macos",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.1.13"
  },
  "build": {
    "appId": "com.quickimagetranslator.app",
    "productName": "QuickImageTranslator",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.png",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    }
  }
}
